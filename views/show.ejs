<% include partials/header %>

<div class="ui main text container">
  <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached segment">
      <div class="item">
        <img src="<%= blog.image %>" class="ui centered rounded image" width="400px">
        <div class="content">
          <span><%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
          <p><%- blog.body %></p>
        </div>
        <a href="/blogs/<%= blog._id%>/edit" class="ui orange basic button">Edit</a>
        <form id="delete" class="ui form" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
          <button type="submit" name="button" class="ui red basic button">Delete</button>
        </form>
      </div>
    </div>
</div>

<% include partials/footer %>
